extends layout

block content
    .limiter
      .container-login100(style="background-image: url('design/images/bg-01.jpg');")
        .wrap-login100.p-l-55.p-r-55.p-t-65.p-b-54
          form.login100-form.validate-form(method="get" action="/api/auth/:id")
            span.login100-form-title.p-b-49
              | Залогинься
            .wrap-input100.validate-input.m-b-23(data-validate='Поле обязательно для заполнения')
              span.label-input100 Имя пользователя
              input.input100(type='text', name='name', placeholder='Введите имя пользователя')
              span.focus-input100(data-symbol='')
            .wrap-input100.validate-input(data-validate='Поле обязательно для заполнения')
              span.label-input100 Пароль
              input.input100(type='password', name='id', placeholder='Введите пароль')
              span.focus-input100(data-symbol='')
            .container-login100-form-btn
              .wrap-login100-form-btn
                .login100-form-bgbtn
                button.login100-form-btn
                  | Login
            .txt1.text-center.p-t-54.p-b-20
              span
                | Нет аккаунта?
              a.txt2(href='/reg')
                | Зарегайся
    #dropDownSelect1
    script(src='design/vendor/jquery/jquery-3.2.1.min.js')
    script(src='design/vendor/animsition/js/animsition.min.js')
    script(src='design/vendor/bootstrap/js/popper.js')
    script(src='design/vendor/bootstrap/js/bootstrap.min.js')
    script(src='design/vendor/select2/select2.min.js')
    script(src='design/vendor/daterangepicker/moment.min.js')
    script(src='design/vendor/daterangepicker/daterangepicker.js')
    script(src='design/vendor/countdowntime/countdowntime.js')
    script(src='design/js/main.js')